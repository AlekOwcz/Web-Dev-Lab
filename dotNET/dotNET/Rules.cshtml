@{
    var rules = (List<string>)Session["rules"];
    if (rules == null)
    {
        rules = new List<string>();
    }

    if (IsPost)
    {
        string rule = Request.Form["rule"];
        if (!string.IsNullOrEmpty(rule))
        {
            rules.Add(rule);
            Session["rules"] = rules;
            Response.Redirect("Rules.cshtml");
        }
    }
}

<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body>
    <form method="post" action="">
        <label for="rule">Add new rule:</label>
        <input type="text" name="rule" id="rule" />
        <input type="submit" value="Submit" />
    </form>
    <h2>Current rules:</h2>
    <ol>
        @foreach (string rule in rules)
        {
            <li>@rule</li>
        }
    </ol>
</body>
</html>
